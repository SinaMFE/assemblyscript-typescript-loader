{
  "name": "assemblyscript-typescript-loader",
  "version": "1.4.1",
  "description": "A webpack loader for compiles typescript with assemblyscript and bundles it as wasm or btyes string",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SinaMFE/assemblyscript-typescript-loader.git"
  },
  "keywords": [
    "typescript",
    "assemblyscript",
    "loader",
    "webpack"
  ],
  "author": "franktech84@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SinaMFE/assemblyscript-typescript-loader/issues"
  },
  "homepage": "https://github.com/SinaMFE/assemblyscript-typescript-loader#readme",
  "dependencies": {
    "loader-utils": "^1.1.0",
    "mime": "^2.2.0",
    "assemblyscript": "github:AssemblyScript/assemblyscript",
    "ts-loader": "^3.5.0",
    "schema-utils": "^0.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.0.0",
    "babel-polyfill": "^6.0.0",
    "babel-preset-env": "^1.0.0",
    "cross-env": "^5.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "del": "^3.0.0",
    "del-cli": "^1.0.0",
    "eslint": "^4.0.0",
    "eslint-config-webpack": "^1.0.0",
    "eslint-plugin-import": "^2.0.0",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "memory-fs": "^0.4.0",
    "nsp": "^2.0.0",
    "pre-commit": "^1.0.0",
    "standard-version": "^8.0.1",
    "webpack": "^4.29.0",
    "webpack-defaults": "^1.6.0"
  },
  "scripts": {
    "start": "npm run build -- -w",
    "appveyor:test": "npm run test",
    "build": "cross-env NODE_ENV=production babel src -d dist --ignore 'src/**/*.test.js' --copy-files",
    "clean": "del-cli dist",
    "prepare": "npm run build",
    "prebuild": "npm run clean",
    "release": "standard-version",
    "security": "nsp check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collectCoverageFrom='src/**/*.js' --coverage",
    "travis:test": "npm run test -- --runInBand",
    "travis:coverage": "npm run test:coverage -- --runInBand",
    "webpack-defaults": "webpack-defaults"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
